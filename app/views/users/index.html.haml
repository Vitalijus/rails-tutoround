#google-map-wrapper
  .search-filter-box
    = search_form_for @search_users do |f|
      = text_field_tag :location, params[:location], :class => "hide-search"
      = f.select :email_cont, ["vitalij.desuk@gmail.com"], :prompt => "Select a name"
      = f.submit "Search", :class => "search-button"

    .search-filter-close 
      = image_tag "arrow-up.png", width: 18
  .search-filter-header 
    Apply search filter:
    .search-filter-open
      Filter
      = image_tag "arrow-down.png", width: 15

  #map

- content_for :google_map do
  :javascript
    $(document).ready(function(){
      var user = #{@markers.to_json};   // pass ruby variable to javascript
      gmap_show(user);    				// init show map for company card (only print marker)
    });

#user-list
  %ul
    - @users.each do |user|
      %li
        = link_to user_path(user) do
          = image_tag user.avatar_url(:avatar)
          = user.email